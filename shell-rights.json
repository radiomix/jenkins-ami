{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "security_group_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-31143701",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "tags": {
	"Name": "jenkins-docker-ami{{timestamp}}"
    },
    "ami_name": "jenkins-docker-ami{{timestamp}}",
    "security_group_id": "{{user `security_group_id`}}"
  }],
  "provisioners": [{
  "type": "shell",
    "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
    "script": "gopath.sh" 
  }
 ]
}
