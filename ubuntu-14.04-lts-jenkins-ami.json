{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "security_group_id": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-31143701",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "tags": {
	"Name": "jenkins-docker-ami{{timestamp}}"
    },
    "ami_name": "jenkins-docker-ami{{timestamp}}",
    "security_group_id": "{{user `security_group_id`}}"
  }],
  "provisioners": [{
    "type": "shell",  
    "inline": [
      "sleep 10",
      "sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 36A1D7869245C8950F966E92D8576A8BA88D21E9",
      "sudo sh -c 'echo deb https://get.docker.io/ubuntu docker main > /etc/apt/sources.list.d/docker.list'",
      "sudo apt-get update",
      "sudo apt-get install -y lxc-docker",
      "sudo apt-get install -y curl",
      "sudo apt-get install -y wget",
      "sudo apt-get install -y ssh",
      "sudo apt-get install -y vi",
      "sudo apt-get install -y git",
      "sudo apt-get install -y mosh",
      "sudo apt-get install -y lynx",
      "sudo apt-get install -y unzip",
      "sudo apt-get install -y sudo",
      "sudo apt-get install -y debconf-utils",
      "sudo apt-get install -y emacs",
      "sudo apt-get install -y python",
      "sudo apt-get install -y python-pip",
      "which lynx mosh git vi wget unzip",
      "sudo reboot"
    ]
  },
  {
  "type": "shell", 
    "inline": [
     "sleep 30",
     "echo INSTALLING CHEF",
     "cd",
     "curl -l https://www.opscode.com/chef/install.sh | sudo bash",
     "sudo apt-get update",
     "echo INSTALLING DOCKER",
     "mkdir docker",
     "sudo groupadd docker",
     "sudo gpasswd  -a ubuntu docker",
     "sudo service docker restart",
     "docker --version",
     "echo CLONING GIT REPOS",
     "cd /home/ubuntu/docker && git clone http://github.com/radiomix/jenkins-ami.git",
     "echo PULLING BASE CONTAINER UBUNTU 14.04 LTS",
     "sudo docker pull ubuntu:14.04",
     "sudo docker pull jenkins",
     "echo CONFIGURING GIT",
     "sudo -u ubuntu git config --global user.name 'Michael Kl√∂ckner' ",
     "sudo -u ubuntu git config --global user.email 'mkl@im7.de' ",
     "sudo -u ubuntu git config --global color.ui true ",
     "sudo -u ubuntu git config --global credential.helper 'store' ",
     "echo INSTALLING JAVA ",
     "sudo apt-get install -y openjdk-7-jdk='7u75-2.5.4-2'",
     "java -version",
     "echo INSTALLING PACKER",
     "wget https://dl.bintray.com/mitchellh/packer/packer_0.7.5_linux_amd64.zip",
     "sudo unzip -d /usr/local/bin packer_0.7.5_linux_amd64.zip",
     "rm -f packer_0.7.5_linux_amd64.zip",
     "packer -version",
     "echo INSTALLING GOLANG",
     "wget https://storage.googleapis.com/golang/go1.4.2.linux-amd64.tar.gz",
     "sudo unzip -d /usr/local/ go1.4.2.linux-amd64.tar.gz"
   ]
  },
  {
  "type": "shell",
    "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
    "script": "gopath.sh" 
  },
  {
   "type": "shell",
   "inline":[
     "sudo apt-get -y upgrade",
     "echo AMI BUILD FINISHED"
   ]
  }
 ]
}
